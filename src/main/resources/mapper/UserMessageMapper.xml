<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.liu.webChat.mybatis_dao.IChatMessageDao">
    <insert id="saveMessage">
        insert into message (username,message,time,time_str) VALUES (#{username},#{message},#{time},#{timeStr});
    </insert>

    <select id="findInitMessage" resultType="cn.liu.webChat.domain.UserMessage">
        select * from message ORDER BY time desc LIMIT 10
    </select>

    <select id="reciveMessage" resultType="cn.liu.webChat.domain.UserMessage">
      select * from message where time_str> #{timeStr} ORDER BY time ASC
    </select>
</mapper>